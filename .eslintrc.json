{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["next/core-web-vitals"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "import/no-unresolved": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "linebreak-style": 0,
    // for array reduce cases + function type parameter for set states
    // overall performance is better compared props spreading as it creates a new object
    "no-param-reassign": 0,
    "react/jsx-filename-extension": 0,
    "react/jsx-props-no-spreading": 0,
    "react/prop-types": 0
  }
}
